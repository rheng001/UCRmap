<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true"
    android:layout_marginBottom="6dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:weightSum="1"
        >

        <TextView
            android:id="@+id/classNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Class name" />

        <TextView
            android:id="@+id/buildingDescriptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="20dp"
            android:layout_below="@+id/classNameView"
            android:text="Building description" />

        <TextView
            android:id="@+id/startTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buildingDescriptionView"
            android:paddingLeft="20dp"
            android:text="00:00AM" />

        <TextView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_alignBaseline="@+id/endTimeView"
            android:layout_alignBottom="@+id/endTimeView"
            android:layout_toRightOf="@+id/classNameView"
            android:layout_toEndOf="@+id/classNameView"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

        <TextView
            android:id="@+id/endTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:text="00:00PM"
            android:layout_below="@+id/buildingDescriptionView"
            android:layout_toRightOf="@+id/dash"
            android:layout_toEndOf="@+id/dash" />

        <TextView
            android:id="@+id/roomDescriptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buildingDescriptionView"
            android:layout_alignBottom="@+id/buildingDescriptionView"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/buildingDescriptionView"
            android:layout_toRightOf="@+id/buildingDescriptionView"
            android:text="Room" />
    </RelativeLayout>


</android.support.v7.widget.CardView>