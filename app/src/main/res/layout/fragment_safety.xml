<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="-2dp"
        android:paddingRight="-2dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView11"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView11"
            android:height="50dp"
            android:text="Safety Resources"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Campus Safety Escort Services"
            android:id="@+id/textView5"
            android:textSize="25dp"
            android:paddingLeft="13dp"
            android:paddingTop="25dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:paddingBottom="15dp"
            android:paddingRight="13dp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Campus Safety Escort Service (CSES) is safe and easy to use. Itâ€™s available to students, staff, faculty and anyone else who needs a safety escort. The service is free. To request a safety escort:"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="20dp"
            android:textColor="@color/colorAccent" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Dial Dispatcher"
            android:id="@+id/callCSES"
            android:background="#6a6a6a"
            android:shadowColor="#c2c2c2"
            android:textAlignment="center"
            android:clickable="true"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or stop by at the HUB information desk or CSES information desk at Rivera Library, or flag down a volunteer with a yellow jacket and an ID badge to help you reach your destination."
            android:id="@+id/textView7"
            android:layout_below="@+id/callCSES"
            android:layout_alignParentLeft="true"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours of operation: dusk to midnight - to request a safety escort past midnight, call the UCPD service number."
            android:id="@+id/textView9"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorAccent"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="5dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="UC Police Department"
            android:id="@+id/textView10"
            android:textSize="25dp"
            android:paddingLeft="13dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="13dp"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For all non emergency and campus-related services:"
            android:id="@+id/textView11"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="20dp"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorAccent" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Dial UCPD"
            android:id="@+id/callUCPD"
            android:background="#6a6a6a"
            android:textAlignment="center"
            android:clickable="true"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In case of an emergency:"
            android:id="@+id/textView17"
            android:layout_below="@+id/callUCPD"
            android:layout_alignParentLeft="true"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@color/colorAccent" />

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Dial 911"
            android:id="@+id/call911"
            android:background="#dfb427"
            android:textAlignment="center"
            android:clickable="true"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/textView17"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>